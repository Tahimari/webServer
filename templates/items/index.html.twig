{% extends 'base.html.twig' %}

{% block title %}Shop{% endblock %}

{% block body %}
    {% if items %}
            <hr>
                {% if category %}
                    <p>{{ category }}</p>
                {% else %}
                    <p>ITEMS</p>
                {% endif %}
            <hr>
            <div class="row">
            {% for item in items %}
                    <div class="col">
                        <a href="/items/{{item.id}}">
                            <img src={{ item.imageUrl }} width="280">
                            <p>{{ item.title }}</p>
                        </a>
                        <p>{{ item.price }} z≈Ç</p>
                    </div>
            {% endfor %}
            {% else %}
                <p>No items to display</p>
    {% endif %}
             </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="/js/main.js"></script>
{% endblock %}