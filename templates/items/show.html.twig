{% extends 'base.html.twig' %}

{% block title %}Shop{% endblock %}

{% block body %}
    {% if item %}
        <hr>
            <p>{{ item.title }}</p>
        <hr>
        <div class="row">
            <div class="col-md">
                <img src="{{item.image_url}}" width="500">
            </div>
            <div class="col-md">
                <p>{{ item.title }}</p>
                <p>{{ item.description }}</p>
                <p>{{ item.price }} z≈Ç</p>
                <button class="btn btn-lg btn-primary btn-block">Kup</button>
            </div>
        </div>
    {% else %}
        <p>No item to display, go back to home page</p>
    {% endif %}
{% endblock %}